import java.util.*;
import java.io.*;

//Trapping rain water bruteforce approach
class MissingNumber {
	public static int trap(int[] height) {
        int n=height.length;
        int lm=0;
        int rm=0;
        int count=0;
      for(int i=0;i<n;i++)
      {
        int curr=0;
        lm=height[i];
        rm=height[i];
         for(int j=i;j>=0;j--)
         {
        	
           lm=Math.max(lm,height[j]);
         }
         for(int k=i;k<n;k++)
         {
           rm=Math.max(rm,height[k]);
         }
         
        curr=Math.min(lm,rm);
        count+=curr-height[i];
        System.out.println("lm: "+lm+"rm: "+rm+"curr: "+curr+"count: "+count);
      }
      return count;
    }

    public static void main(String[] args) {
        // TODO Auto-generated method stub
        Scanner sc=new Scanner(System.in);
        int n=sc.nextInt();
        int h[]=new int[n];
        for(int i=0;i<n;i++)
        {
        	h[i]=sc.nextInt();
        }
        
        System.out.println(trap(h));
    }
}
