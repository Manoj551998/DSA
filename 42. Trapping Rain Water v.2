class Solution {
    public int trap(int[] height) {
       int n=height.length;
        int lm[]=new int[n];
        int rm[]=new int[n];
        int l=0;
        int r=0;
        for(int i=0;i<n;i++)
        {
        	
        	lm[i]=Math.max(l, height[i]);
        	l=lm[i];
        }
        for(int i=n-1;i>=0;i--)
        {
        	
        	rm[i]=Math.max(r, height[i]);
        	r=rm[i];
        }
        int c=0;
        for(int i=0;i<n;i++)
        {
        	c+=Math.min(lm[i], rm[i])-height[i];
        }
        return c;
    }
}
